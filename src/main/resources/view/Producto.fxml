<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="742.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Producto">
   <children>
      <Label layoutX="40.0" layoutY="23.0" text="Catálogo de productos">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <Label layoutX="40.0" layoutY="68.0" text="Añade, edita o elimna productos de tu inventario." />
      <TextField fx:id="txtFiltrar" layoutX="40.0" layoutY="98.0" prefHeight="25.0" prefWidth="382.0" promptText="Buscar por SKU o nombre" />
      <Button fx:id="btnFiltrar" layoutX="433.0" layoutY="98.0" mnemonicParsing="false" onAction="#filtrarProductos" prefHeight="25.0" prefWidth="92.0" text="Filtrar" />
      <Button fx:id="btnAgregar" layoutX="594.0" layoutY="98.0" mnemonicParsing="false" onAction="#agregarProducto" prefHeight="25.0" prefWidth="116.0" text="Agregar Producto" />
      <TableView fx:id="tablaProductos" layoutX="40.0" layoutY="142.0" prefHeight="384.0" prefWidth="670.0">
        <columns>
          <TableColumn fx:id="colNombre" prefWidth="226.0" text="Nombre del producto" />
          <TableColumn fx:id="colSKU" minWidth="1.0" prefWidth="71.0" text="SKU" />
            <TableColumn fx:id="colCantidad" minWidth="1.0" prefWidth="76.0" text="Cantidad" />
            <TableColumn fx:id="colPrecio" minWidth="1.0" prefWidth="104.0" text="Precio" />
            <TableColumn fx:id="ColEstado" minWidth="1.0" prefWidth="111.0" text="Estado" />
            <TableColumn fx:id="ColAcciones" minWidth="0.0" prefWidth="81.0" text="Acciones" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
